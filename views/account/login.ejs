<div class="login-container">
  <h1><%= title %></h1>
  
  <!-- Display any flash messages -->
  <% if (typeof messages !== 'undefined') { %>
    <%- messages() %>
  <% } %>
  
  <!-- Display any errors -->
  <% if (errors) { %>
    <div class="error-messages">
      <% errors.forEach(function(error) { %>
        <p class="error"><%= error.msg %></p>
      <% }); %>
    </div>
  <% } %>

  <form action="/account/login" method="post" class="login-form">
    <div class="form-group">
      <label for="account_email">Email Address:</label>
      <input type="email" id="account_email" name="account_email" required 
             placeholder="Enter your email address"
             value="<%= typeof account_email != 'undefined' ? account_email : '' %>">
    </div>

    <div class="form-group">
      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password" required 
             placeholder="Enter your password">
      <span class="password-requirements">Password must be at least 12 characters long</span>
    </div>

    <div class="form-group">
      <button type="submit" class="login-btn">Login</button>
    </div>
  </form>

    <div class="register-link">
        <p>Don't have an account? <a href="/account/register">Sign up here</a></p>
    </div>
</div>