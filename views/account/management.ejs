<div class="account-management-container">
  <% if (locals.accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
  <% } %>

  <%- messages() %>

  <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>

  <% if (locals.accountData && (accountData.account_type === 'Employee' || accountData.account_type === 'Admin')) { %>
    <h3>Inventory Management</h3>
    <p><a href="/inventory/">Manage Inventory</a></p>
  <% } %>
</div>