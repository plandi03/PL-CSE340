<div class="vehicle-detail-page">
  <h1><%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %></h1>
  
  <!-- Navigation breadcrumb -->
  <nav class="breadcrumb">
    <a href="/">Home</a> > 
    <a href="/inventory/type/<%= currentClassification %>"><%= classificationName %></a> > 
    <span><%= vehicle.inv_make %> <%= vehicle.inv_model %></span>
  </nav>
  
  <div class="detail-container">
    <div class="vehicle-image">
      <img src="<%= vehicle.inv_image %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>" />
    </div>
    
    <div class="vehicle-info">
      <div class="vehicle-specs">
        <h2>Vehicle Details</h2>
        <p><strong>Price:</strong> <%= formattedPrice %></p>
        <p><strong>Mileage:</strong> <%= formattedMiles %> miles</p>
        <p><strong>Color:</strong> <%= vehicle.inv_color %></p>
        <p><strong>Year:</strong> <%= vehicle.inv_year %></p>
      </div>
      
      <div class="vehicle-description">
        <h3>Description</h3>
        <p><%= vehicle.inv_description %></p>
      </div>
    </div>
  </div>
  
  <!-- Classification Filter Section -->
  <%- classificationFilter %>
  
  <div class="navigation-links">
    <a href="/inventory/type/<%= currentClassification %>" class="btn back-btn">‚Üê Back to <%= classificationName %></a>
    <a href="/" class="btn home-btn">üè† Home</a>
  </div>
</div>