<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">
      <img src="/images/site/icon.png" alt="CSE Motors Logo" class="logo" style="height:2em;vertical-align:middle;">
      CSE Motors
    </a>
  </span>
  <div id="tools">
    <% if (locals.loggedin) { %>
      <a title="Click to manage account" href="/account/">Welcome <%= locals.accountData.account_firstname %></a>
      <a title="Click to log out" href="/account/logout">Logout</a>
    <% } else { %>
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>